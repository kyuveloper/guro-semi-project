<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gurosemiproject.petales.mapper.ComMapper">

    <resultMap id="comInfo" type="com.gurosemiproject.petales.model.dto.ComDTO">
        <id property="comCode" column="COM_CODE"/>
        <result property="comName" column="COM_NAME"/>
        <result property="comLat" column="COM_LAT"/>
        <result property="comLon" column="COM_LON"/>
    </resultMap>

    <select id="comLocat" resultMap="comInfo">
        SELECT
            COM_NAME
          FROM COMPANY_TEST
         WHERE COM_NAME = '업체1'
    </select>

</mapper>